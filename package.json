{
  "name": "template.point",
  "version": "0.0.1",
  "author": "Point Network",
  "description": "Template example zapp - use as a scaffold to create more Zapps!",
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "axios": "^0.27.2",
    "boring-avatars": "^1.7.0",
    "dayjs": "^1.11.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "4.0.3",
    "timeago.js": "^4.0.2",
    "typescript": "^4.7.4",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "clear": "rm -rf ./public/* .cache .parcel-cache",
    "start": "react-scripts start",
    "watch:docker": "./watch.docker.js",
    "build": "npm run clear && cp src/*.html ./public/. && cp src/*.css ./public/. && parcel build src/index.js --dist-dir ./public --no-source-maps",
    "watch": "npm run clear && cp src/*.html ./public/. && cp src/*.css ./public/. && parcel watch src/index.js --dist-dir ./public/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts --ext .js --ext .jsx --ext .tsx .",
    "fix": "eslint --ext .ts --ext .js --ext .jsx --ext .tsx --fix ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "autoprefixer": "^10.4.7",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "parcel": "^2.0.0-rc.0",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.6",
    "ts-node": "^10.9.1"
  }
}
